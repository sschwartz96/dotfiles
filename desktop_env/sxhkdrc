# reload sxhkd config
ctrl + shift + r
	pkill sxhkd; sleep 1; sxhkd & disown
	#killall -SIGUSR1 sxhkd; sleep 1

# sleep
super + ctrl + shift + s
	snooze

super + shift + s
	sleep 0.25 && scrot --select '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'

# 
# bspc bindings
#

# exit bspc
super + shift + {q,r}
	bspc {quit 1, wm -r}

## close focused window
super + shift + c
	bspc node -c

## start browser
super + shift + w
	$BROWSER & \
	sleep 6.0; \
	bspc node focused --state pseudo_tiled; \
	sleep 0.2; \
	bspc node focused--state tiled

###
#
# bspwm
#
###

# desktop focus
super + {0-4}
	bspc desktop -f {0-4}

super + {7-9}
	bspc desktop -f {7-9}

# desktop move node
super + shift + {0-4,7-9}
	bspc node -d {0-4,7-9} --follow 

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# swap the focused node in a given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east} --follow

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local     

# focus last used desktop
super + Tab
	bspc desktop -f last

# focus next/previous monitor
super + {_,shift} {comma, period}
	bspc {monitor -f,node -m} {prev,next}

# swap current node with the biggest
super + Return {
	bspc node -s biggest.local
}

# toggle fullscreen of current node
super + f
	bspc node --state \~fullscreen

# toggle floating or tiled mode
super + d
	bspc node -t \~floating

## increase 40 pixels 
#super + ctrl + shift + {j,k,h,l}
#	bspc node --resize {bottom 0 40,top 0 -40,left -40 0,right 40 0}
#
## decrease 40 pixels 
#super + escape + {j,k,h,l}
#	bspc node --resize {bottom 0 40,top 0 -40,left -40 0,right 40 0}

# smart resize, will grow or shrink depending on location.
# Will always grow for floating nodes
super + ctrl + {h,j,k,l}
  n=80; \
  { d1=left;   d2=right;  dx=-$n; dy=0;   \
  , d1=bottom; d2=top;    dx=0;   dy=$n;  \
  , d1=top;    d2=bottom; dx=0;   dy=-$n; \
  , d1=right;  d2=left;   dx=$n;  dy=0;   \
  } \
  bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy

# END bspc bindings


# Brightness

XF86MonBrightnessUp
	brightness +5%

XF86MonBrightnessDown
	brightness -5%

ctrl + Down
	brightness 1


# Volume
XF86AudioRaiseVolume
	volume +5

XF86AudioLowerVolume
	volume -5


# playerctl
XF86AudioPlay
	media play-pause

super + m
	media play-pause

super + Down
	media pause

super + Up
	media play

super + Left
	media previous

super + Right 
	media next

ctrl + shift + {0-9}
	/home/sam/bin/switch_audio.sh {0-9}

