# edit config script
super + e
	~/dotfiles/scripts/edit_config.sh

# start rofi
super + p
	rofi -show run

# start rofi-calc
super + c
	rofi -show calc -modi calc -no-show-match -no-sort

# start terminal
super + shift + Return
	alacritty

# screen shot select
super + Print 
	sleep 0.25 && scrot -selection -s ~/temp.png && xclip ~/temp.png && rm ~/temp.png

# toggle thunderbird
super + t
	birdtray -t
